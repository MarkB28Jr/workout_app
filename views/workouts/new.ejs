<%- include('../partials/header') %>

<div id="muscleList">
    <div>Exercise</div>
</div>

<form id="addExercises" action="/workouts" method="POST">
    <label for="exercisesName">Enter a Name for the Exercises:</label>

<input type="text" name="name" placeholder="Enter Name of Workout"><br>
    <% for (let i=0; i < 6; i++) { %>
        <div>
            <label for="exerciseName">Enter a Exercise:</label>
            <input type="text" name="exercise<%= i %>" placeholder="Enter Exercise">
        </div>
    <% } %>

<button name="submit">Submit</button>
</form>


