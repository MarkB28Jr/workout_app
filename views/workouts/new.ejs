<%- include('../partials/header') %>

    <form id="addExercises" action="/workouts" method="POST">
        <label for="exercisesName"><strong> Enter a Name Workout:</strong></label><br>

        <input type="text" name="name" placeholder="Enter Name of Workout"><br><br>
        <% for (let i=0; i < 6; i++) { %>
            <div>
                <label for="exerciseName"><strong>Exercise <%= [i + 1] %>: </strong></label>
                <input type="text" name="exercise<%= i %>" placeholder="Enter Exercise">
            </div>
            <br>
            <% } %>
            <button name="submit">Submit</button>
        </form>


    <%- include('../partials/footer') %>